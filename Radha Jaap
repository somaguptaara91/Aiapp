        if (typeof __initial_auth_token !== 'undefined') {
            signInWithCustomToken(auth, __initial_auth_token).catch(async (error) => {
                console.error("‡§ï‡§∏‡•ç‡§ü‡§Æ ‡§ü‡•ã‡§ï‡§® ‡§ï‡•á ‡§∏‡§æ‡§• ‡§≤‡•â‡§ó‡§ø‡§® ‡§µ‡§ø‡§´‡§≤ ‡§π‡•Å‡§Ü:", error);
                await signInAnonymously(auth);
            });
        } else {
